public class Solution {
    public int[] countBits(int num) {
        if (num==0) return new int[]{0};
        int[] x=new int[num+1];

        x[0]=0;
        x[1]=1;
        int seed=1;

        for (int i=2;i<num+1;i++)
        {
            if (i==seed*2 )
            {
                x[i]=1;
                seed=i;
                continue;
            }
            x[i]=x[i-seed]+1;
        }
        return x;
    }
}
